<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %>
      <%= article.created_at.strftime("Created at: " + "%A" + ", " + "%b-%d-%Y")%>
    </li>
  <% end %>
</ul>
<%= link_to "Write", new_article_path, class: "new_article" %>
<%= link_to "Authors", authors_path %>
